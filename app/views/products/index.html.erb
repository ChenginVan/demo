<h1>Products list</h1>

<%= link_to "Create Product", new_product_path %>
<table>
	<thead>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
	</thead>
	<% @products.each do |product| %>
	<tr>
		<td><%= product.name %></td>
		<td><%= product.description %></td>
		<td><%= product.price %></td>
		<td><%= link_to "Edit", edit_product_path(product) %></td>
		<td><%= link_to "Delete", product, method: :delete, data: {confirm: "Confirm to DELETE this product?"} %></td>
	</tr>
	<% end %>
</table>